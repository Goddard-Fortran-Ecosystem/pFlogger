# Include file for external  projects using Unix Make instead of cmake.
# Usage:

# FFLAGS += -I$(GFTL_INCLUDE_DIR) -I$(GFTL_SHARED_INCLUDE_DIR) -I$(PFLOGGER_INCLUDE_DIR)
# LFLAGS += $(PFLOGGER_SHARED_LIBRARIES)

# gFTL-shared
GFTL_SHARED_TOP_DIR := @GFTL_SHARED_TOP_DIR@
include ${GFTL_SHARED_TOP_DIR}/include/GFTL_SHARED.mk

# gFTL-shared
YAFYAML_TOP_DIR := @YAFYAML_TOP_DIR@
include ${YAFYAML_TOP_DIR}/include/YAFYAML.mk


# yaFyaml
PFLOGGER_INSTALL_PREFIX := @CMAKE_INSTALL_PREFIX@
PFLOGGER_VERSION := @PFLOGGER_VERSION_MAJOR@.@PFLOGGER_VERSION_MINOR@
PFLOGGER_TOP_DIR := $(PFLOGGER_INSTALL_PREFIX)/PFLOGGER-$(PFLOGGER_VERSION)
PFLOGGER_INCLUDE_DIR := $(PFLOGGER_TOP_DIR)/include
PFLOGGER_LIBRARIES := -L$(PFLOGGER_TOP_DIR)/lib -pflogger ${YAFYAML_LIBRARIES} $(GFTL_SHARED_LIBRARIES)
